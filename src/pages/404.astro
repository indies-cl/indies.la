---
import "../global.css";
import Footer from "../components/Footer.astro";
import FontPreloads from "../components/FontPreloads.astro";
import i18n from "../i18n/config";
import { getLanguageFromPath, getLocalizedPath } from "../utils/language";

const lang = getLanguageFromPath(Astro.url.pathname);
i18n.changeLanguage(lang);
const t = i18n.getFixedT(lang);
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <FontPreloads />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{t("404.title")}</title>
  </head>
  <body class="bg-bg antialiased text-balance text-tx text-xl font-serif p-4">
    <div class="max-w-lg mx-auto space-y-4">
      <h1 class="text-2xl font-sans text-og normal-case">{t("404.title")}</h1>
      <p class="lowercase">
        {t("404.message")}{" "}
        <a href={getLocalizedPath("/", lang)} class="text-og underline">{t("404.backLink")}</a>
      </p>
      <Footer pathname={Astro.url.pathname} />
    </div>
  </body>
</html>
